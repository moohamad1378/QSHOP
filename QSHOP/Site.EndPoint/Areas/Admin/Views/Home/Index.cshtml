@model IEnumerable<Application.Services.HomeServices.Sliders.ListSliderDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Add">یکی بساز</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                عکس
            </th>
            <th>
                لینک
            </th>
            <th>
                نام
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
                    @foreach (var item in Model) {
        <tr>
            <td>
                <img style="width:50px;height:50px;" src="~/@item.ImageSrc">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("حذف", "Delete", new {  id=item.Id})
            </td>
        </tr>
}
        }

    </tbody>
</table>
