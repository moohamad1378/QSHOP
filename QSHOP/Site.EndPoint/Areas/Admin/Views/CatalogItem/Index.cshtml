        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
                    @foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableStock)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.MaxStockThreshold)
