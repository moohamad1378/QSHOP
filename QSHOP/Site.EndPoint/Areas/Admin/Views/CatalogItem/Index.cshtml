@model IEnumerable<Application.Services.Catalogs.CatalogItems.CatalogItemListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h5>لیست محصولایت</h5>

<p>
    <a asp-action="Create">یکی بساز</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                نام
            </th>
            <th>
                قیمت
            </th>
            <th>
                موجودی انبار
            </th>
            <th>
                نهایت ظرفیت انبار
            </th>
            <th>
                آیدی یوزری که اینو ساخته
