@model IEnumerable<Application.Services.Catalogs.CatalogItems.ImgaeListFOrDelete>

@{
    ViewData["Title"] = "Images";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>تصاویر</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                عکس
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/@item.Src" style="width:200px;height:200px;">
            </td>
            <td>
                @Html.ActionLink("حذف", "DeleteImage", new {  id=item.Id,catalog=item.CatalogItemID  }) |
            </td>
        </tr>
}
    </tbody>
</table>
