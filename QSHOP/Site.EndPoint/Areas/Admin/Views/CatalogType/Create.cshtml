@using Application.Services.Catalogs.CatalogTypss
@model CatalogTypeDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 col-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4> ثبت دسته بندی جدید  </h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">
@*            @foreach (var item in Model.me)
            {
                <div class="alert alert-info">
                    <p>@item</p>
                </div>
            }*@
            <form asp-action="Create" asp-controller="CatalogType" method="post" enctype="application/x-www-form-urlencoded">
                <div  class="text-danger"></div>
                <div class="form-group mb-4">
                    <label asp-for="Type"> </label>
                    <input type="text" class="form-control" asp-for="Type">
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="ParentCatalogTypeId" />
                <input type="submit" name="time" value="ثبت" class="btn btn-primary">
                <a asp-action="index" class="btn btn-info">برگشت به لیست</a>
            </form>

        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
