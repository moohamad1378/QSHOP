@using Site.EndPoint.Models.ViewComponents
@model IEnumerable<Dto>
@{
    Layout = null;
}

    <div class="boxed-area blocks-spacer">
        <div class="container">
            
            <!--  ==========  -->
            <!--  = Title =  -->
            <!--  ==========  -->
            <div class="row">
                <div class="span12">
                    <div class="main-titles lined">
                    	<h2 class="title"><span class="light">محصولات</span> جدید فروشگاه</h2>
                    </div>
                </div>
            </div> <!-- /title -->
            
            <div class="row popup-products blocks-spacer">
                  
                 
                <!--  ==========  -->
                <!--  = Product =  -->
                <!--  ==========  -->
                @foreach (var item in Model)
                {
               <div class="span3">
            	    <div class="product">
            	        <div class="product-img">
                            <div class="picture">
                                <img src="~/@item.Src" alt="" width="540" height="374" />
                                <div class="img-overlay">
                                    <a href="~/product/Detail?Id=@item.Id&&Slug=@item.Slug" class="btn more btn-danger">مشاهده جزیات</a>
                                </div>
                            </div>
                        </div>
                        <div class="main-titles no-margin">
                            <h4 class="title"> @item.Name</h4>
                            <h5 class="no-margin">ریال @item.Price.ToString("n0")</h5>
                        </div>
                        <p class="desc">@item.Des.Substring(0,30)</p>
            	    </div>
            	</div>
                }
 <!-- /product -->
            	
            	<div class="clearfix"></div> 

            	
            	 
            	 
            </div>
        </div>
    </div>          
