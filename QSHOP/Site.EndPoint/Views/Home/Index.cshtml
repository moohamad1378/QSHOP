
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <!--  ==========  -->
    <!--  = Slider Revolution =  -->
    <!--  ==========  -->
     <div class="fullwidthbanner-container">
        <div class="fullwidthbanner">
                @await Component.InvokeAsync("SliderComponents")
        </div>
        <!--  ==========  -->
        <!--  = Nav Arrows =  -->
        <!--  ==========  -->
        <div id="sliderRevLeft"><i class="icon-chevron-left"></i></div>
        <div id="sliderRevRight"><i class="icon-chevron-right"></i></div>
    </div>
<!-- /slider revolution -->

    <!--  ==========  -->
    <!--  = Main container =  -->
    <!--  ==========  -->
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="push-up over-slider blocks-spacer">
                    
                    <!--  ==========  -->
                    <!--  = Three Banners =  -->
                    <!--  ==========  -->
                    <div class="row">
                        <div class="span4">
                            <a href="https://localhost:44360/Product" class="btn btn-block banner">
                                <span class="title"><span class="light">فروش</span> تابستانی</span>
                                <em>تخفیف 20% برای خدمات نصب</em>
                            </a>
                        </div>
                        <div class="span4">
                            <a href="https://localhost:44360/Product" class="btn btn-block colored banner">
                                <span class="title"><span class="light">ارسال</span>  رایگان قطعات</span>
                                <em>برای خریداران موتورهای Sassi</em>
                            </a>
                        </div>
                        <div class="span4">
                            <a href="https://localhost:44360/Product?sorttype=4" class="btn btn-block banner">
                                <span class="title"><span class="light">محصولات</span> جدید</span>
                                <em>از محصولات جدید دیدن کنید.</em>
                            </a>
                        </div>
                    </div> <!-- /three banners -->
                </div>
            </div>
        </div>
        
        <!--  ==========  -->
        <!--  = Featured Items =  -->
        <!--  ==========  -->

        @await Component.InvokeAsync("FeaturedComponents")
    </div> <!-- /container -->
    
    <!--  ==========  -->
    <!--  = New Products =  -->
    <!--  ==========  -->
@await Component.InvokeAsync("NewProductComponents")<!-- /new products -->
    
    <!--  ==========  -->
    <!--  = Most Popular products =  -->
    <!--  ==========  -->
 @await Component.InvokeAsync("MostPupularComponents")<!-- /most popular -->
    
    <!--  ==========  -->
    <!--  = Lastest News =  -->
    <!--  ==========  -->
  @await Component.InvokeAsync("NewsComponents")<!-- /latest news -->
    
    <!--  ==========  -->
    <!--  = Brands Carousel =  -->
    <!--  ==========  -->
  @await Component.InvokeAsync("OurBrandComponents")<!-- /brands carousel -->